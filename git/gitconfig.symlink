[alias]
	revert = reset --hard HEAD
	undo = reset --soft HEAD~1
[user]
	name = Johan Bleuzen
[color]
	diff = auto
	status = auto
	branch = auto
	ui = true
[core]
	editor = nvim
	excludesfile = ~/.gitignore
[url "https://"]        
	insteadOf = git://
[branch]
	autosetuprebase = always
[push]
	default = current
[status]
	showUntrackedFiles = all
[tag]
  sort = v:refname

# Work
[includeIf "gitdir:~/Bridge/"]
    path = ~/Bridge/.gitconfig

[alias]
	revert = reset --hard HEAD
	undo = reset --soft HEAD~1
[user]
	name = Johan Bleuzen
[color]
	diff = auto
	status = auto
	branch = auto
	ui = true
[core]
	editor = vim
	excludesfile = ~/.gitignore
[url "https://"]        
	insteadOf = git://
[branch]
	autosetuprebase = always
[push]
	default = simple
[status]
	showUntrackedFiles = all

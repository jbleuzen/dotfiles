{
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "json"
  ],

  "tsserver.formatOnType": true,
  "coc.preferences.formatOnType": true,

  // ESLint
  "eslint.autoFixOnSave": true,
  "eslint.filetypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue"
  ],

  // Prettier
  "prettier.disableSuccessMessage": true,

  "diagnostic.errorSign": "!!",
  "diagnostic.warningSign": ">>"
}
